{% extends 'base.html.twig' %}

{% block title %}Site{% endblock %}

{% block body %}
    <h1>Site</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ site.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ site.name }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ site.type }}</td>
            </tr>
            <tr>
                <th>Place</th>
                <td>{{ site.place }}</td>
            </tr>
            <tr>
                <th>Client</th>
                <td>{{ site.client }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ site.duration }}</td>
            </tr>
            <tr>
                <th>QuoteNumber</th>
                <td>{{ site.quoteNumber }}</td>
            </tr>
            <tr>
                <th>Worker</th>
                <td>{{ site.worker }}</td>
            </tr>
            <tr>
                <th>Starting Date</th>
                <td>{{ site.startingDate|date("d/m/Y") }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('site_index') }}">back to list</a>

    <a href="{{ path('site_edit', {'id': site.id}) }}">edit</a>

    {{ include('site/_delete_form.html.twig') }}
{% endblock %}
