{% extends 'base.html.twig' %}

{% block title %}Liste des réalisations{% endblock %}

{% block body %}
<div class="container mb-5 pb-5">
    <h1 class="my-4 text-primary">Liste des réalisations</h1>
    <a href="{{ path('realisation_new') }}" class="btn btn-secondary my-4">Ajouter une réalisation</a>
    <table class="table mt-2 mb-5">
        <thead>
            <tr>
                <th>Id</th>
                <th>Catégorie</th>
                <th>Nom du fichier</th>
                <th>Image</th>
                <th>Posté le</th>
                <th>Actions</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for realisation in realisations %}
            <tr>
                <td>{{ realisation.id }}</td>
                <td>{{ realisation.category.name }}</td>
                <td>{{ realisation.name }}</td>
                <td class="realisation-picture">
                    <img class="align-self-start mr-3 w-75" src="{{ asset('uploads/' ~ realisation.name) }}" alt="{{ realisation.name }}">
                </td>
                <td>{{ realisation.updatedAt ? realisation.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('realisation_edit', {'id': realisation.id}) }}" class="btn btn-warning">Modifier</a>
                </td>
                <td> {{ include('realisation/_delete_form.html.twig') }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
